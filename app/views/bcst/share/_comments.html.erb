<% @comments = @comments.includes(:user).page(params[:page]) %>
<%= index_for @comments, class: :table do |t| %>
  <%= t.attribute :username, in: :user %>
  <%= t.attribute :avatar, in: :user do |avatar| %>
    <%= image_tag(avatar.url(:thumb)) %>
  <% end %>
  <%= t.attribute :content %>
  <%= t.attribute :created_at, format: :short %>
<% end %>

<%= paginate @comments %>
