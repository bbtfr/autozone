<% comments = comments.includes(:user, :at_user).page(params[:page]) %>

<%= index_for comments do |t| %>
  <%= t.attribute :username, in: :user %>
  <%= t.attribute :avatar, in: :user do |avatar| %>
    <%= image_tag(avatar.url(:thumb)) %>
  <% end %>
  <%= t.attribute :content %>
  <%= t.attribute :created_at, format: :short %>
  <% if @user.admin? %>
    <%= t.actions :destroy %>
  <% end %>
<% end %>

<%= paginate comments %>
