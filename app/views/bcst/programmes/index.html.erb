<div class="row-fluid">
  <div class="span3">
    <%= render "bcst/share/sidenav/provider" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3>节目板块管理 <small><a href="<%= new_bcst_programme_path %>">添加</a></small></h3>
    </div>

    <%= render 'share/alert', message: '您还没有添加任何节目板块！' if @bcsts.empty? %>

    <%= index_for @bcsts, class: :table do |t| %>
      <%= t.attribute :id %>
      <%= t.attribute :avatar do |avatar| %>
        <%= image_tag(avatar.url(:thumb)) %>
      <% end %>
      <%= t.attribute :title %>
      <%= t.association :hosts, using: :name, join: '、' %>
      <%= t.actions :all %>
    <% end %>

  </div>
</div>