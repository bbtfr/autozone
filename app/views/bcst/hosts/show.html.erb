<div class="row-fluid">
  <div class="span3">
    <%= render "bcst/share/sidenav/provider" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3><%= @bcst.name %> <small><a href="<%= edit_bcst_host_path(@bcst) %>">编辑</a></small></h3>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <img src="<%= @bcst.avatar.url(:medium) %>">
      </div>
      <div class="span9">
        <table class="table">
          <thead>
            <tr>
              <th><%= translate_attribute_name :programmes, :'bcst/host' %></th>
              <td><%= @bcst.programmes.map(&:title).join('、') %></td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th><%= translate_attribute_name :description, :'bcst/host' %></th>
              <td><%= @bcst.description %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>