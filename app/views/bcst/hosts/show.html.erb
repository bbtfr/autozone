<div class="row-fluid">
  <div class="span3">
    <%= render "bcst/share/sidenav/provider" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3><%= @host.name %> <small><a href="<%= edit_bcst_host_path(@host) %>">编辑</a></small></h3>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <img src="<%= @host.avatar.url(:medium) %>">
      </div>
      <div class="span9">
        <%= show_for @host do |s| %>
          <%= s.association :programmes, using: :title, join: '、' %>
          <%= s.attribute :description %>
        <% end %>
      </div>
    </div>
  </div>

</div>