<% if @user_type == :admin %>
  <% content_for :title do %>
    后台管理
  <% end %>
<% end %>

<!DOCTYPE html>
<html>
  <%= render 'share/head' %>
  <body>
    <div class="container">
      <%= render 'share/header' %>

      <div class="navbar">
        <div class="navbar-inner">
          <div class="container">
            <% case @user_type %>
            <% when :provider, :dealer, :admin %>
              <%= render "share/nav/#{@user_type}" %>
            <% else %>
              <%= render 'share/nav/welcome' %>
            <% end %>
          </div>
        </div>
      </div><!-- /.navbar -->

      <% flash.each do |type, message| %>
        <div class="alert alert-<%= { alert: :block, notice: :info }[type] || type.to_s %> fade in">
          <button class="close" data-dismiss="alert">×</button>
          <%= message %>
        </div>
      <% end %>

      <!-- Container -->
      <%= yield %>
      
      <%= render 'share/footer' %>
    </div> <!-- /container -->
    <%= render 'share/javascripts' %>
  </body>
</html>
