<% content_for :title do %>
  提醒服务
<% end %>

<div class="card">
  <table class="table-view">
    <tr>
      <th>主题</th>
      <th>详细描述</th>
      <th>服务顾问</th>
      <th>时间</th>
    </tr>
    <% @sales_cases.each do |sales_case| %>
      <tr>
        <td><%= sales_case.title %></td>
        <td><%= sales_case.description %></td>
        <td><%= sales_case.adviser %></td>
        <td><%= l sales_case.created_at, format: :short %></td>
      </tr>
    <% end %>
  </table>
</div>