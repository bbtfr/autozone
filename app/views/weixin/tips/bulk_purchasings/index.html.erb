<div class="card">
  <ul class="table-view">
    <% @bulk_purchasings.each do |bulk_purchasing| %>
      <li class="table-view-cell media">
        <%= link_to weixin_dealer_bulk_purchasing_path(@dealer, bulk_purchasing), class: "navigate-right", data: { transition: "slide-in" } do %>
          <%= image_tag bulk_purchasing.image.url(:thumb), class: "media-object pull-left" %>
          <div class="media-body">
            <%= bulk_purchasing.title %>
            <p>已购人数：<%= bulk_purchasing.orders_count %></p>
            <p>评分：<%= bulk_purchasing.orders_count %></p>
            <p>会员价：<%= bulk_purchasing.vip_price %>   原价：<%= bulk_purchasing.price %></p>
          </div>
        <% end %>
    </li>
    <% end %>
  </ul>
</div>
