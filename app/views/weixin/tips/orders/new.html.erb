<% content_for :title do %>
  提交订单
<% end %>

<% case params[:type] %>
<% when "mending" %>
  <%= render "new_mending" %>
<% when "vehicle_insurance" %>
  <%= render "new_vehicle_insurance" %>
<% when "secondhand_appraise" %>
  <%= render "new_secondhand_appraise" %>
<% else %>
  <%= render "new_common" %>
<% end %>

<script>
  function set_num(n) {
    var p = parseFloat(document.getElementById("price").innerHTML);
    document.getElementById("num").value = n;
    document.getElementById("sum").innerHTML = p * n + " 元";
  }
  function plus(){
    var n = parseInt(document.getElementById("num").value);
    set_num(n + 1);
  }
  function minus(){
    var n = parseInt(document.getElementById("num").value);
    if(n > 1) set_num(n - 1);
  }
</script>
