<% content_for :title do %>
  近期活动
<% end %>

<div class="card">
  <ul class="table-view">
    <% @activities.each do |activity| %>
      <li class="table-view-cell media">
        <%= link_to weixin_dealer_activity_path(@dealer, activity), class: "navigate-right", data: { transition: "slide-in" } do %>
          <%= image_tag activity.image.url(:thumb), class: "media-object pull-left" %>
          <div class="media-body">
            <%= activity.title %>
            <p class="time redcolor">剩余时间：<%= distance_of_time_in_words(activity.expire_at, Time.now) %></p>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
