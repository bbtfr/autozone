<div class="card">
  <ul class="table-view">
    <li class="table-view-cell">评分：<span class="orangecolor"><%= print_stars @source.stars, false %></span></li>
    <% @reviews.each do |review| %>
      <li class="table-view-cell">
        <%= review.order.user.username %>：<%= print_stars review.stars, false %>
        <%= simple_format(review.content) %>
      </li>
    <% end %>
    <li class="table-view-cell orangecolor"><%= link_to "查看全部评价", weixin_polymorphic_path(@dealer, @source, :reviews), class: "navigate-right link" %></li>
  </ul>
</div>