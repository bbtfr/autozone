<% content_for :title do %>
  重置密码
<% end %>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="card">
    <ul class="table-view table-view-block">
      <li class="table-view-cell input-row"><%= f.input :reset_password_token, as: :string, autofocus: true %></li>
      <li class="table-view-cell input-row"><%= f.input :password %></li>
      <li class="table-view-cell input-row"><%= f.input :password_confirmation %></li>
    </ul>
  </div>
  <div class="card-no-border">
    <%= f.button :submit, "重置密码", class: 'btn-positive btn-block' %>
  </div>
<% end %>
