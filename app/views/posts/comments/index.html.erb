<div class="row-fluid">
  <div class="span3">
    <%= render "posts/share/sidenav/admin" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3>随手拍 “<%= truncate @post.content, length: 15 %>” 评论管理 <small><%#= link_to "添加", new_accounts_dealer_path %></small></h3>
    </div>

    <% @comments = @comments.includes(:user) %>

    <%= index_for @comments, class: :datatable do |t| %>
      <%= t.attribute :id %>
      <%= t.attribute :username, in: :user %>
      <%= t.attribute :content %>
      <%= t.attribute :created_at, format: :short %>
      <%= t.actions :destroy %>
    <% end %>

  </div>
</div>