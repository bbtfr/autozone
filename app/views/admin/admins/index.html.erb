<div class="page-header">
  <h3>管理员管理 <small></small></h3>
</div>

<table class="table">
  <thead>
    <tr>
      <th><%= translate_attribute_name :id, :user %></th>
      <th><%= translate_attribute_name :avatar, :user %></th>
      <th><%= translate_attribute_name :username, :user %></th>
      <th><%= translate_attribute_name :description, :user %></th>
      <th>操作</th>    
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><img src="<%= user.avatar.url(:thumb) %>" /></td>
        <td><%= user.username %></td>
        <td><%= user.description %></td>
        <td class="actions">
          <%= link_to content_tag(:i, '', class: 'icon-search'), admin_admin_path(user), title: '查看详情', rel: 'tooltip' %>
          <%= link_to content_tag(:i, '', class: 'icon-pencil'), edit_admin_admin_path(user), title: '编辑', rel: 'tooltip' %>
          <% if can? :destroy, user %>
            <%= link_to content_tag(:i, '', class: 'icon-remove'), admin_admin_path(user), data: { method: :delete, confirm: '您确定要删除这个用户？' }, title: '删除', rel: 'tooltip' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新建管理员", new_admin_admin_path, class: 'btn btn-submit' %>

<%= paginate @users %>