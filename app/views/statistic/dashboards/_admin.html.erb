<table class="table">
  <thead>
    <tr>
      <th>地区</th>
      <th>服务商</th>
      <th>经销商</th>
      <th>车主</th>
    </tr>
  </thead>
  <tbody>
    <% accounts = ::Accounts::Account.group_by_area_and_type %>
    <% Category::Area.all.each do |area_id, area| %>
      <% if accounts[area_id] %>
        <tr>
          <td><%= area %></td>
          <td><%= accounts[area_id][:dealer].try :count %></td>
          <td><%= accounts[area_id][:distributor].try :count %></td>
          <td><%= accounts[area_id][:user].try :count %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
  
</table>