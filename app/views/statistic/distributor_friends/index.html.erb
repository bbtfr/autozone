<div class="row-fluid">
  <div class="span3">
    <%= render "statistic/share/sidenav/#{@user_type}" %>
  </div>
  
  <div class="span9">
    
    <div class="page-header">
      <h3>经销商列表 <small></small></h3>
    </div>

    <%= render 'share/alert', message: '您还没有关注任何经销商！' if @friends.empty? %>

    <%= index_for @friends, class: :datatable do |t| %>
      <%= t.attribute :id %>
      <%= t.attribute :avatar do |avatar| %>
        <%= image_tag(avatar.url(:thumb)) %>
      <% end %>
      <%= t.attribute :username %>
      <%= t.attribute :description %>
      <%= t.action_link :show do |distributor| %>
        <%= icon_link_to "查看详情", 'icon-search', dashboard_distributor_path(distributor) %>
      <% end %>
    <% end %>


  </div>
</div>