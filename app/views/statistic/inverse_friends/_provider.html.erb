<div class="page-header">
  <h3>客户列表 <small></small></h3>
</div>

<%= render 'share/alert', message: '还没有用户关注您！' if @inverse_friends.empty? %>

<% @inverse_friends = @inverse_friends.page(params[:page]) %>

<%= index_for @inverse_friends, class: :table do |t| %>
  <%= t.attribute :id %>
  <%= t.attribute :avatar do |avatar| %>
    <%= image_tag(avatar.url(:thumb)) %>
  <% end %>
  <%= t.attribute :username %>
  <%= t.attribute :description %>
<% end %>

<%= paginate @inverse_friends %>
