<div class="row-fluid">
  <div class="span3">
    <%= render "statistic/share/sidenav/#{@user_type}" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3>客户列表 <small></small></h3>
    </div>

    <%= render 'share/alert', message: '还没有用户关注您！' if @inverse_friends.empty? %>
    
    <% @inverse_friends = @inverse_friends.includes(:detail, :orders, :reviews) %>

    <%= index_for @inverse_friends, class: :datatable do |t| %>
      <%= t.attribute :id %>
      <%= t.attribute :avatar do |avatar| %>
        <%= image_tag(avatar.url(:thumb)) %>
      <% end %>
      <%= t.attribute :username %>
      <%= t.attribute :brand, in: :detail %>
      <%= t.attribute :created_at, format: :short %>
      <%= t.attribute :total_cost %>
      <%= t.attribute :last_ordered_at, format: :short %>
      <%= t.attribute :last_stars %>
    <% end %>

  </div>
</div>