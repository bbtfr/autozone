<%= simple_form_for(@sales_case, html: { class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! @sales_case %>
  
  <div class="control-group">
    <label class="control-label">客户</label>
    <div class="controls">
      <span class="input-xlarge uneditable-input"><%= @sales_case.user.username %></span>
      <%= f.hidden_field :user_id %>
    </div>
  </div>

  <%= f.input :description, input_html: { rows: 4, class: 'input-xxlarge' } %>
  <%= f.input :solution, input_html: { rows: 4, class: 'input-xxlarge' } %>

  <%= f.input :adviser %>

  <%= f.button :submit, class: 'btn-submit' %>
<% end %>