<% @buying_advice ||= @buying_advice_order.source %>

<%= simple_form_for(@buying_advice_order, html: { class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! @buying_advice_order %>
  
  <div class="control-group">
    <label class="control-label">客户</label>
    <div class="controls">
      <span class="input-xlarge uneditable-input"><%= @buying_advice.user.username %></span>
    </div>
  </div>

  <%= f.input :price, hint: '填数字即可，单位：元' %>
  <%= f.input :description, input_html: { rows: 4, class: 'input-xxlarge' } %>

  <%= f.input :adviser %>

  <%= f.hidden_field :buying_advice_id %>
  <%= f.button :submit, class: 'btn-submit' %>
<% end %>