<table class="table">
  <thead>
    <tr>
      <th><%= translate_attribute_name :id, :activity %></th>
      <th><%= translate_attribute_name :image, :activity %></th>
      <th><%= translate_attribute_name :title, :activity %></th>
      <th><%= translate_attribute_name :expire_at, :activity %></th>
      <th>操作</th>    
    </tr>
  </thead>
  <tbody>
    <% @tips.each do |tip| %>
      <tr>
        <td><%= tip.id %></td>
        <td><img src="<%= tip.image.url(:thumb) %>"></td>
        <td><%= tip.title %></td>
        <td><%= l tip.expire_at, format: :short %></td>
        <td class="actions">
          <%= link_to content_tag(:i, '', class: 'icon-search'), tips_activity_path(tip) %>
          <%= link_to content_tag(:i, '', class: 'icon-pencil'), edit_tips_activity_path(tip) %>
          <%= link_to content_tag(:i, '', class: 'icon-remove'), tips_activity_path(tip), data: { method: :delete, confirm: '您确定要删除这个项目？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>