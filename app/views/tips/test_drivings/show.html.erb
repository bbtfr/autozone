<div class="row-fluid">
  <div class="span3">
    <%= render "tips/share/sidenav/#{@user_type}" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3><%= @test_driving.title %> <small><a href="<%= edit_tips_test_driving_path(@test_driving) %>">编辑</a></small></h3>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <img src="<%= @test_driving.image.url(:medium) %>">
      </div>
      <div class="span9">
        <%= show_for @test_driving do |s| %>
          <%= s.attribute :price %>
          <%= s.attribute :brand %>
          <%= s.attribute :series %>
          <%= s.attribute :description %>
        <% end %>
      </div>
    </div>

    <h4>车型参数</h4>
    <div class="dl-horizontal">
      <% @test_driving.grouped_params.each do |group, grouped_params| %>
        <dl class="no-border"><strong><%= group %></strong></dl>
        <div class="nested-fields">
          <% grouped_params.each do |title, param| %>
            <dl>
              <dt><%= title %></dt>
              <dd><%= param %></dd>
            </dl>
          <% end %>
          <dl>&nbsp;</dl>
        </div>
      <% end %>
    </div>
  </div>

</div>

<% content_for :stylesheets do %>
  <style type="text/css">
    .nested-fields {
      margin-bottom: 20px;
      -webkit-column-count: 2;
      -moz-column-count: 2;
      column-count: 2;
    }
  </style>
<% end %>
