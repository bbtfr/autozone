<div class="row-fluid">
  <div class="span3">
    <%= render "tips/share/sidenav/#{@user_type}" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3><%= @order.source.title %> <small></small></h3>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <img src="<%= @order.source.image.url(:medium) %>">
      </div>
      <div class="span9">
        <%= show_for @order do |s| %>
          <%= s.association :user, using: :username %>
          <%= s.attribute :title %>
          <%= s.attribute :cost %>
          <%= s.attribute :state %>

          <%= s.attribute "服务项目列表" do end %>
          <dl>
            <%= index_for @order.vip_card_order_items do |t| %>
              <%= t.attribute :title %>
              <%= t.attribute :count %>
              <%= t.attribute :used_count %>
            <% end %>
          </dl>
        <% end %>


      </div>
    </div>
  </div>

</div>