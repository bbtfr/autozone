<%= index_for @bulk_purchasings, class: 'table datatable' do |t| %>
  <%= t.attribute :id %>
  <%= t.attribute :image do |image| %>
    <%= image_tag(image.url(:thumb)) %>
  <% end %>
  <%= t.attribute :title %>
  <%= t.attribute :bulk_purchasing_type %>
  <%= t.attribute :expire_at, format: :short %>
  <%= t.attribute :vip_price %>
  <%= t.attribute :price %>
  <% if @user.admin? %>
    <%= t.actions :destroy %>
  <% else %>
    <%= t.actions :all %>
  <% end %>
<% end %>
