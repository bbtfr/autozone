<div class="row-fluid">
  <div class="span3">
    <%= render "tips/share/sidenav/dealer" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3>团购订单列表 <small></small></h3>
    </div>

    <%= render 'share/alert', message: '您还没有收到团购订单！' if @orders.empty? %>

    <table class="table">
      <thead>
        <tr>
          <th><%= translate_attribute_name :id, :'tips/order' %></th>
          <th><%= translate_attribute_name :title, :'tips/order' %></th>
          <th><%= translate_attribute_name :count, :'tips/order' %></th>
          <th><%= translate_attribute_name :price, :'tips/order' %></th>
          <th><%= translate_attribute_name :state, :'tips/order' %></th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.title %></td>
            <td><%= order.count %></td>
            <td><%= order.cost %></td>
            <td><%= order.state %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>