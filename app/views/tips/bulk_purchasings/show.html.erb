<div class="row-fluid">
  <div class="span3">
    <%= render "tips/share/sidenav/dealer" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3><%= @tip.title %> <small><a href="<%= edit_tips_bulk_purchasing_path(@tip) %>">编辑</a></small></h3>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <img src="<%= @tip.image.url(:medium) %>">
      </div>
      <div class="span9">
        <table class="table">
          <thead>
            <tr>
              <th><%= translate_attribute_name :bulk_purchasing_type, :bulk_purchasing %></th>
              <td><%= @tip.bulk_purchasing_type %></td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th><%= translate_attribute_name :expire_at, :bulk_purchasing %></th>
              <td><%= l @tip.expire_at %></td>
            </tr>
            <tr>
              <th><%= translate_attribute_name :vip_price, :bulk_purchasing %></th>
              <td><%= @tip.vip_price %></td>
            </tr>
            <tr>
              <th><%= translate_attribute_name :price, :bulk_purchasing %></th>
              <td><%= @tip.price %></td>
            </tr>
            <tr>
              <th><%= translate_attribute_name :description, :bulk_purchasing %></th>
              <td><%= @tip.description %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>