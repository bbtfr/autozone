<div class="row-fluid">
  <div class="span3">
    <%= render "tips/share/sidenav/dealer" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3><%= @tip.title %> <small><a href="<%= edit_tips_cleaning_path(@tip) %>">编辑</a></small></h3>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <img src="<%= @tip.image.url(:medium) %>">
      </div>
      <div class="span9">
        <%= show_for @tip do |s| %>
          <%= s.attribute :cleaning_type %>
          <%= s.attribute :vip_price %>
          <%= s.attribute :price %>
          <%= s.attribute :description %>
        <% end %>
      </div>
    </div>
  </div>

</div>