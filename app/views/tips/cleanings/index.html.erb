<div class="row-fluid">
  <div class="span3">
    <%= render "tips/share/sidenav/#{@user_type}" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3>服务项目管理 <small></small></h3>
    </div>

    <%= render 'share/alert', message: '您还没有创建任何服务项目！' if @cleanings.empty? %>

    <%= index_for @cleanings, class: 'table datatable' do |t| %>
      <%= t.attribute :id %>
      <%= t.attribute :image do |image| %>
        <%= image_tag(image.url(:thumb)) %>
      <% end %>
      <%= t.attribute :title %>
      <%= t.attribute :cleaning_type %>
      <%= t.attribute :vip_price %>
      <%= t.attribute :price %>
      <% if @user.admin? %>
        <%= t.actions :destroy %>
      <% else %>
        <%= t.actions :all %>
      <% end %>
    <% end %>

  </div>
</div>