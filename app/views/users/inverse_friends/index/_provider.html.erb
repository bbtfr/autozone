<div class="page-header">
  <h3>客户列表 <small></small></h3>
</div>

<%= render 'share/alert', message: '还没有用户关注您！' if @inverse_friends.empty? %>

<table class="table">
  <thead>
    <tr>
      <th><%= translate_attribute_name :id, :user %></th>
      <th><%= translate_attribute_name :avatar, :user %></th>
      <th><%= translate_attribute_name :username, :user %></th>
      <th><%= translate_attribute_name :description, :user %></th>
    </tr>
  </thead>
  <tbody>
    <% @inverse_friends.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><img src="<%= user.avatar.url(:thumb) %>" /></td>
        <td><%= user.username %></td>
        <td><%= user.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>