<div class="row-fluid">
  <div class="span3">
    <%= render "settings/sidenav/#{@user_type}" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3>财务信息 <small></small></h3>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <img src="<%= @dealer.avatar.url(:medium) %>">
      </div>
      <div class="span9">
        <div class="dl-horizontal dl-span6">
          <dl><strong>财务信息一览</strong></dl>
          <dl>
            <dt>广告基金</dt>
            <dd><%= @dealer.inverse_friends.count * 3 %></dd>
          </dl>
          <dl>
            <dt>已用金额</dt>
            <dd><%= @dealer.detail.balance_used %></dd>
          </dl>
          <dl>&nbsp;</dl>
          <dl class="no-border">
            <dt>应收款</dt>
            <dd><a>提现</a></dd>
          </dl>
          <dl>
            <dt>应付佣金</dt>
            <dd><a>支付佣金</a></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

</div>