<div class="row-fluid">
  <div class="span3">
    <%= render "settings/sidenav/#{@user_type}" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3>业务模板管理 <small></small></h3>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <img src="<%= @user.avatar.url(:medium) %>">
      </div>
      <div class="span9">
        <%= simple_form_for(@user, url: account_registration_path, html: { method: :put, class: 'form-horizontal no-margin dl-horizontal dl-span6' }) do |f| %>

          <% if @dealer %>
            <div>
              <dl><strong>业务模板管理</strong></dl>
              <%= render 'template', type: :cleaning %>
              <%= render 'template', type: :mending %>
              <%= render 'template', type: :test_driving %>
              <%= render 'template', type: :vehicle_insurance %>
              <%= render 'template', type: :secondhand_appraise %>
              <dl>&nbsp;</dl>

              <dl class="no-border"><strong>营销模块管理</strong></dl>
              <%= render 'template', type: :bulk_purchasing %>
              <%= render 'template', type: :activity %>
              <%= render 'template', type: :construction_case %>
              <dl>&nbsp;</dl>

              <%= render 'template', type: :vip_card %>
              <%= render 'template', type: :bulk_purchasing2 %>
            </div>

            <input name="account[type]" type="hidden" value="Accounts::Dealer">
          <% elsif @provider %>

            <div>
              <dl><strong>业务模板管理</strong></dl>
              <%= render 'template', type: :exposure %>
              <%= render 'template', type: :traffic_report %>

              <input name="account[type]" type="hidden" value="Accounts::Provider">
            </div>

          <% end %>
          <input name="account[detail_attributes][template_ids][]" type="hidden" value="">

          <%= f.button :submit, "更新业务模板", class: 'btn-submit' %>
        <% end %>
      </div>
    </div>
  </div>

</div>