<% if controller_name != 'sessions' %>
  <strong><p>已有汽车堂公众账号？ <%= link_to "立即登录", new_session_path(resource_name) %></p></strong>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <strong><p>第一次使用公众平台？ <%= link_to "立即注册", new_registration_path(resource_name) %></p></strong>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <strong><p><%= link_to "忘记密码？", new_password_path(resource_name) %></p></strong>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <strong><p><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %></p></strong>
<% end %>

<%# if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <!-- <strong><p><%#= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %></p></strong> -->
<%# end %>

<% if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <strong><p><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %></p></strong>
  <% end %>
<% end %>