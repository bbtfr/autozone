<div class="row-fluid">
  <div class="span3">
    <%= render "business/share/sidenav/#{@user_type}" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3>广告模板管理 <small></small></h3>
    </div>

    <%= index_for @ad_templates, class: :datatable do |t| %>
      <%= t.attribute :id %>
      <%= t.attribute :avatar do |avatar| %>
        <%= image_tag(avatar.url(:thumb)) %>
      <% end %>
      <%= t.attribute :product %>
      <%= t.attribute :product_type %>
      <%= t.attribute :price %>
      <%= t.attribute :file do |file| %>
        <%= link_to file.original_filename, file.url(:original, timestamp: false) %>
      <% end %>
      <%= t.actions :edit, :destroy %>
    <% end %>

  </div>
</div>