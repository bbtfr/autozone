<div class="page-header">
  <h3>服务商详细信息 <small><a href="<%= edit_admins_dealer_path(@user) %>">编辑</a></small></h3>
</div>

<div class="row-fluid">
  <div class="span3">
    <img src="<%= @user.avatar.url(:medium) %>">
  </div>
  <div class="span9">
    <table class="table">
      <thead>
        <tr>
          <th><%= translate_attribute_name :username, :'accounts/dealer' %></th>
          <td><%= @user.username %></td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th><%= translate_attribute_name :user_type, :'accounts/dealer' %></th>
          <td>服务商</td>
        </tr>
        <tr>
          <th><%= translate_attribute_name :mobile, :'accounts/dealer' %></th>
          <td><%= @user.mobile %></td>
        </tr>
        <tr>
          <th><%= translate_attribute_name :description, :'accounts/dealer' %></th>
          <td><%= @user.description %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>