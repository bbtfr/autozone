<div class="row-fluid">
  <div class="span3">
    <%= render "accounts/share/sidenav/admin" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3>在线技师管理 <small></small></h3>
    </div>

    <% @clubs = @clubs.includes(:mechanics) %>

    <%= index_for @clubs, class: :datatable do |t| %>
      <%= t.attribute :id %>
      <%= t.attribute :avatar do |avatar| %>
        <%= image_tag(avatar.url(:thumb)) %>
      <% end %>
      <%= t.attribute :title %>
      <%= t.attribute :announcement %>
      <%= t.association :mechanics, using: :username, join: '、' %>
      <%= t.action_link :show do |club| %>
        <%= icon_link_to "认命在线技师", 'icon-user', mechanic_accounts_candidate_path(club) %>
      <% end %>
    <% end %>

  </div>
</div>