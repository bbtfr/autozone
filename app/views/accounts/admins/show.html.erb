<div class="row-fluid">
  <div class="span3">
    <%= render "accounts/share/sidenav/admin" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3>管理员详细信息 <small><a href="<%= edit_accounts_admin_path(@user) %>">编辑</a></small></h3>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <img src="<%= @user.avatar.url(:medium) %>">
      </div>
      <div class="span9">

        <%= show_for @user do |s| %>
          <%= s.attribute :username %>
          <%= s.attribute :user_type %>
          <%= s.attribute :mobile %>
          <%= s.attribute :description %>
        <% end %>

      </div>
    </div>

  </div>
</div>