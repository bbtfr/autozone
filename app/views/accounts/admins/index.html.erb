<div class="row-fluid">
  <div class="span3">
    <%= render "accounts/share/sidenav/admin" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3>管理员管理 <small><%= link_to "添加", new_accounts_admin_path %></small></h3>
    </div>

    <%= index_for @admins, class: :datatable do |t| %>
      <%= t.attribute :id %>
      <%= t.attribute :avatar do |avatar| %>
        <%= image_tag(avatar.url(:thumb)) %>
      <% end %>
      <%= t.attribute :mobile %>
      <%= t.attribute :username %>
      <%= t.attribute :description %>
      <%= t.action_link :all do |record| %>
        <%= link_to t("index_for.actions.show").html_safe, accounts_admin_path(record) %>
        <% if can? :update, record %>
          <%= link_to t("index_for.actions.edit").html_safe, edit_accounts_admin_path(record) %>
        <% end %>
        <% if can? :destroy, record %>
          <%= link_to t("index_for.actions.destroy").html_safe, accounts_admin_path(record), method: :delete, data: { confirm: t("index_for.actions.confirmation") } %>
        <% end %>
      <% end %>
    <% end %>

  </div>
</div>