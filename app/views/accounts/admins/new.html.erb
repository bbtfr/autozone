<div class="row-fluid">
  <div class="span3">
    <%= render "accounts/share/sidenav/admin" %>
  </div>
  
  <div class="span9">
    <div class="page-header">
      <h3>创建管理员 <small></small></h3>
    </div>

    <%= simple_form_for(@admin, html: { class: 'form-horizontal', multipart: true }) do |f| %>
      <%= devise_error_messages! @admin %>
      
      <%= f.input :mobile, autofocus: true %>

      <%= f.input :password %>
      <%= f.input :password_confirmation %>

      <%= f.input :username %>
      <%= f.input :avatar do %>
        <div class="fileupload fileupload-new" data-provides="fileupload">
          <div class="fileupload-new thumbnail" style="width: 150px; height: 150px;"><img src="<%= @admin.avatar.url(:medium) %>" /></div>
          <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 150px; max-height: 150px; line-height: 20px;"></div>
          <div>
            <span class="btn btn-file"><span class="fileupload-new">更换图片</span><span class="fileupload-exists">更换</span><input type="file" name="accounts_admin[avatar]" /></span>
            <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">删除</a>
          </div>
        </div>
      <% end %>
      
      <%= f.input :description, input_html: { rows: 4, class: 'input-xxlarge' } %>

      <%= f.button :submit, class: 'btn-submit' %>
    <% end %>

  </div>
</div>